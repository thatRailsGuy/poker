<%= form_for(@game) do |f| %><% if @game.errors.any? %>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN">
<html>
	<head>
		<title></title>
	</head>
	<body>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:
			</h2>
			<ul>
				<% @game.errors.full_messages.each do |msg| %>
				<li>
					<%= msg %>
				</li><% end %>
			</ul>
		</div><% end %>
		<div class="field">
			<%= f.label :name %><br>
			<%= f.text_field :name %>
		</div>
		<div class="field">
			<%= f.label :description %><br>
			<p>Use markdown for description. <a href="#" onclick="toggle_visibility('markdown_examples');">Click here for examples</a>
			</p>
			<div id="markdown_examples" style="display: none;">
				<table class="table table-bordered table-condensed table-striped" >
					<thead>
						<th>Markdown Input</th>
						<th>Output</th>
					</thead>
					<tbody>
						<tr>
							<td># Header 1</td>
							<td><%= markdown("\# Header 1")%></td>
						</tr>
						<tr>
							<td>## Header 2</td>
							<td><%= markdown("\#\# Header 2")%></td>
						</tr>
						<tr>
							<td>### Header 3</td>
							<td><%= markdown("\#\#\# Header 3")%>
							</td>
						</tr>
						<tr>
							<td>
								* Item 1 <br/>
								* Item 2 <br/>
								* Item 3 <br/>
							</td>
							<td>
							<%= markdown("* Item 1\n* Item 2\n* Item 3")%>
							</td>
						</tr>
						<tr>
							<td>
								*italics*    _italics_
							</td>
							<td>
								<%= markdown("*italics*    _italics_")%>
							</td>
						</tr>
						<tr>
							<td>
								**bold**    __bold__
							</td>
							<td>
							<%= markdown("**bold**    __bold__")%>
							</td>
						</tr>
						<tr>
							<td>
								This is [an example](http://example.com/ "Optional Title")
								inline link.
							</td>
							<td>
							<%= markdown("This is [an example](http://example.com/ \"Optional Title\")
							inline link.")%>
							</td>
						</tr>
						<tr><td>\\</td><td><%= markdown("\\")%></td></tr>
						<tr><td>[card:ace of spades]</td><td><%= markdown("[card:ace of spades]")%></td></tr>
						<tr><td>[game:sample]</td><td><%= markdown("[game:sample]")%></td></tr>
					</tbody>
				</table>
			</div><%= f.text_area :description %>
		</div>
		<div class="field">
			<%= f.label :style_id %><br>
			<%= f.collection_radio_buttons :style_id, Style.all, :id, :name %>
		</div>
		<div class="field">
			<%= f.label :min_players %><br>
			<%= f.number_field :min_players %>
		</div>
		<div class="field">
			<%= f.label :max_players %><br>
			<%= f.number_field :max_players %>
		</div>
		<div class="field">
			<%= f.label :num_cards %><br>
			<%= f.number_field :num_cards %>
		</div>
		<div class="field">
			<%= f.label :tags %><br>
			<%= f.collection_check_boxes :tags, %w[wildcard pot-matching dickish], :to_s, :to_s%>
		</div>
		<div class="actions">
			<%= f.submit %>
		</div><% end %>
	</body>
</html>
