<h1>Listing styles</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <% @styles.each do |style| %>
      <tr>
		<% if admin_signed_in? %>
        	<td><%= link_to style.name, edit_style_path(style) %></td>
		<% else %>
        	<td><%= link_to style.name, style_path(style) %></td>
		<% end %>
        <td><%= style.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Style', new_style_path %>
