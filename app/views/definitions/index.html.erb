<h1>Listing definitions</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Word</th>
      <th>Definition</th>
			<th></th>
    </tr>
  </thead>

  <tbody>
    <% @definitions.each do |definition| %>
      <tr>
		<% if admin_signed_in? %>
        	<td><%= link_to definition.word, edit_definition_path(definition) %></td>
		<% else %>
			<td><%= link_to definition.word, definition_path(definition) %></td>
		<% end %>
		<td><%= definition.definition %></td>
		<% if admin_signed_in? %>
	      	<td><%= link_to 'Delete', definition, method: :delete %></td>
		<% end %>
			</tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Definition', new_definition_path %>
